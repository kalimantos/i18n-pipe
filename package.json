{
  "name": "i18n-pipe",
  "version": "0.0.3",
  "description": "i18n for pipe separated translation strings",
  "author": "Matteo Dellea <matteo.dellea@artshell.eu>",
  "license": "MIT",
  "type": "module",
  "module": "./build/i18n.js",
  "types": "./build/i18n.d.ts",
  "engines": {
    "node": "^22.0.0",
    "npm": "^10.5.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "clean": "rimraf build coverage",
    "cz": "cz",
    "lint:check": "biome ci .",
    "lint": "biome check . --apply-unsafe",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test": "node --import tsx --test \"src/**/*.test.ts\"",
    "test:coverage": "NODE_V8_COVERAGE=./coverage c8 -r html node --experimental-test-coverage --import tsx --test \"src/**/*.test.ts\"",
    "test:watch": "node --import tsx --watch --test \"src/**/*.test.ts\"",
    "type:check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/github": "^10.0.4",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "c8": "^9.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "rimraf": "^5.0.7",
    "tsx": "^4.10.4",
    "typescript": "^5.4.5"
  }
}
